                                            <InputRadioGroup id="category" @bind-Value="role.CanKickMember">
                                                <div class="radio-item-group">
                                                    <InputRadio Value="true" id="true-kick-member"/>
                                                    <label for="true-kick-member">Able to kick member</label>
