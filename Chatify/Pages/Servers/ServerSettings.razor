                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-uppercase" for="server-icon">Server Icon</label>
                                <div class="mt-1">Select an image for your server. This is not required.</div>
                                <ValidationMessage For="(() => editingServer.PictureName)"/>
